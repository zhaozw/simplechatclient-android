<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.simplechatclient.android"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.simplechatclient.android.TabsActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.simplechatclient.android.LoginFragment"
            android:label="@string/title_login"
            android:parentActivityName="com.simplechatclient.android.TabsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".TabsActivity" />
        </activity>
        <activity
            android:name="com.simplechatclient.android.ProfileListFragment"
            android:label="@string/title_profiles"
            android:parentActivityName="com.simplechatclient.android.LoginFragment" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ProfileActivity" />
        </activity>
        <activity
            android:name="com.simplechatclient.android.ProfileEditActivity"
            android:label="@string/title_profile_edit"
            android:parentActivityName="com.simplechatclient.android.ProfileListFragment" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ProfileActivity" />
        </activity>
        <activity
            android:name="com.simplechatclient.android.ProfileAddActivity"
            android:label="@string/title_profile_add"
            android:parentActivityName="com.simplechatclient.android.ProfileListFragment" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ProfileActivity" />
        </activity>
        <activity android:name="com.simplechatclient.android.ProfileActivity" >
        </activity>
        <activity android:name="com.simplechatclient.android.TabsFragment" >
        </activity>
    </application>

</manifest>